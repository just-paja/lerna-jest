{
  "name": "lerna-isolate",
  "version": "0.1.3",
  "description": "Extract your app from lerna repository with local package dependencies",
  "scripts": {
    "build": "babel . --only bin,lib -d dist",
    "prepublish": "npm test; npm run build",
    "test": "jest"
  },
  "bin": {
    "lerna-isolate": "dist/bin/isolate.js"
  },
  "main": "dist/lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/just-paja/lerna-isolate.git"
  },
  "keywords": [
    "lerna",
    "debootstrap",
    "extract",
    "dependencies",
    "production",
    "build",
    "delink",
    "isolate"
  ],
  "author": "Pavel Žák <pavel@zak.global>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/just-paja/lerna-isolate/issues"
  },
  "files": [
    "dist/*"
  ],
  "homepage": "https://github.com/just-paja/lerna-isolate#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.3.0",
    "jest-runner-eslint": "^0.7.6",
    "jest-watch-typeahead": "^0.5.0",
    "prettier": "^2.0.4"
  },
  "dependencies": {
    "ora": "^4.0.3",
    "tmp-promise": "^2.0.2",
    "yargs": "^15.3.1"
  }
}
