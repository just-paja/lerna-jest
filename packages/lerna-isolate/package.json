{
  "name": "lerna-isolate",
  "version": "0.3.0",
  "description": "Extract your app from lerna repository with local package dependencies",
  "scripts": {
    "build": "babel . --only bin,lib -d dist",
    "prepublish": "npm test; npm run build",
    "test": "jest"
  },
  "bin": {
    "lerna-isolate": "dist/bin/isolate.js"
  },
  "main": "dist/lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/just-paja/lerna-isolate.git"
  },
  "keywords": [
    "lerna",
    "debootstrap",
    "extract",
    "dependencies",
    "production",
    "build",
    "delink",
    "isolate"
  ],
  "standard": {
    "env": [
      "jest"
    ],
    "parser": "babel-eslint"
  },
  "author": "Pavel Žák <pavel@zak.global>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/just-paja/lerna-isolate/issues"
  },
  "files": [
    "dist/*"
  ],
  "homepage": "https://github.com/just-paja/lerna-isolate#readme",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "babel-eslint": "^10.1.0",
    "jest": "^26.4.2",
    "jest-runner-standard": "0.0.13",
    "jest-watch-typeahead": "^0.6.1",
    "prettier-standard": "^16.4.1",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "archiver": "^5.0.2",
    "ora": "^5.1.0",
    "tar": "^6.0.5",
    "tmp-promise": "^3.0.2",
    "yargs": "^16.0.3"
  }
}
